<% include ./partials/header %>

		<div class="jumbotron">
			<h1>S<span class="brandChar">Q</span>UASH ACADEMY</h1>
			<p>Najlepsze miejsce do nauki squasha na śląsku</p>
			<button class="btn btn-default btn-lg">Zagraj z nami!</button>
		</div>

		<div class="container">
			<div class="row">
				<div class="col-md-6">
					<div class="row">
					 	<div class="col-md-6" id="avatar_ann"></div>
					 	<div class="col-md-6 gridMargin">
					 		<ul class="list-unstyled">
					 			<li><strong>Kamil</strong></li>
								<li><i class="fas fa-phone"></i> xxx-xxx-xxx</li>
								<li><i class="fas fa-envelope"></i> kamil@squashacademy.pl</li>
							</ul>
					 	</div>
					</div>
					<div class="row">
					 	<div class="col-md-6" id="avatar_kamil"></div>
					 	<div class="col-md-6 gridMargin">
					 		<ul class="list-unstyled">
					 			<li><strong>Ania</strong></li>
								<li><i class="fas fa-phone"></i> xxx-xxx-xxx</li>
								<li><i class="fas fa-envelope"></i> ania@squashacademy.pl</li>
							</ul>
					 	</div>
					</div>
				</div>
				<div class="col-md-6">
					<form action="/" method="POST">
						<div class="form-group">
							<label>Imię i nazwisko</label>
							<input type="text" class="form-control" name="contact[name]" placeholder="Imię i nazwisko" required>
						</div>
						<div class="form-group">
							<label>Termin</label>
							<input class="form-control" required name="contact[date]" type="date">
						</div>
						<div class="form-group">
							<label>Trener</label>
							<select class="form-control" name="contact[coach]">
								<option value="" selected></option>
								<option value="Ania">Ania</option>
								<option value="Kamil">Kamil</option>
							</select>
						</div>
						<div class="form-group" style="display: inline-block;">
							<label>Nr. telefonu</label>
							<input class="form-control" required name="contact[telephone]" style="width: auto;" type="tel">
						</div>	
						<div class="form-group" style="display: inline-block;">
							<label>Email</label>
							<input class="form-control" name="contact[email]" style="width: auto;" type="email" required>
						</div>
						<div class="form-group">
							<label>Wiadomość</label>
							<textarea class="form-control" name="contact[message]" placeholder="Wiadomość" rows="10">
							</textarea>
						</div>
						<div class="form-group">
							<input class="form-control btn btn-default" type="submit">
						</div>
					</form>
				</div>
			</div>
		</div>

<% include ./partials/footer %>